<script>
// Optional: show small confirmation details if present in query string
const params = new URLSearchParams(location.search);
const extra = document.getElementById('extra');
const unit = params.get('unit');
const sid = params.get('sid');
const t = params.get('t');
const bits = [];
if (unit) bits.push('الوحدة: ' + unit);
if (sid) bits.push('Session: ' + sid);
if (t) bits.push('Time: ' + new Date(parseInt(t, 10)).toLocaleString());
if (bits.length) extra.textContent = bits.join(' • ');
</script>
